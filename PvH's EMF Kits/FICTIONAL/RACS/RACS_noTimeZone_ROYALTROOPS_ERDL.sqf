_defWeapons = ["rhssaf_zrak_rd7j", "CUP_arifle_G36K", "CUP_launch_M72A6"];
_defVests = ["CUP_V_B_PASGT_OD"];
_defBackpacks = ["CUP_B_Kombat_Olive"];
_defHeadgear = ["CUP_H_CZ_Helmet08", "CUP_H_CZ_Helmet07"];
